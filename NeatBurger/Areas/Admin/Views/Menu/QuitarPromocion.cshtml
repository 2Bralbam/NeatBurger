@model NeatBurger.Areas.Admin.Models.ViewModels.AgregarPromocionViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "AdminLayout";
}
<form method="post" action="~/Admin/QuitarPromocion">
    <h1>Eliminar promoción</h1>

    <span class="pregunta"><b>¿Desea eliminar la promoción de la hamburguesa?</b></span>
    <span>
        <label for="nombre">Nombre:</label>
        <input asp-for="Nombre" type="text" id="nombre" required>
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input type="text" asp-for="Precio" id="precio" required>
    </span><span>
        <label for="promocion">Precio promocion:</label>
        <input type="text" asp-for="PrecioPromocion" id="promocion" required>
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Si" />
        <a href="~/">
            <input type="button" value="No" />
        </a>
    </div>
</form>

<script>

    function previewImagen() {
        const inputImagen = document.getElementById('imagen');
        const imagenPreview = document.getElementById('imagen-preview');

        const archivoImagen = inputImagen.files[0];

        if (archivoImagen) {
            const lector = new FileReader();

            lector.onload = function (e) {
                imagenPreview.src = e.target.result;
                imagenPreview.style.display = 'block';
            };

            lector.readAsDataURL(archivoImagen);
        } else {
            imagenPreview.src = '#';
            imagenPreview.style.display = 'none';
        }
    }
</script>